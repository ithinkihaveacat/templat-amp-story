{
  // https://www.typescriptlang.org/docs/handbook/compiler-options.html
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "noImplicitAny": true,
    "sourceMap": false,
    "moduleResolution": "node",
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "jsx": "react",
    "noImplicitReturns": true
  },
  "exclude": ["node_modules", "dist"]
}
